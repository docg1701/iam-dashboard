# Environment Variables Template
# Copy this file to .env and update values for your environment

#==============================================================================
# APPLICATION SETTINGS
#==============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Debug mode (true/false)
DEBUG=true

# Application secret key (change in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

#==============================================================================
# DATABASE CONFIGURATION
#==============================================================================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=iam_dashboard

# Database URL (auto-constructed, override if needed)
DATABASE_URL=postgresql://postgres:your-db-password@localhost:5432/iam_dashboard

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

#==============================================================================
# REDIS CONFIGURATION
#==============================================================================

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Redis URL (auto-constructed, override if needed)
REDIS_URL=redis://:your-redis-password@localhost:6379/0

# Cache TTL Settings (in seconds)
REDIS_TTL=3600
PERMISSION_CACHE_TTL=300

#==============================================================================
# SERVER CONFIGURATION
#==============================================================================

# Backend API Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Frontend Server
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

#==============================================================================
# SECURITY SETTINGS
#==============================================================================

# Permission System
PERMISSION_CHECK_TIMEOUT=10

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_EXTENSIONS=[".pdf", ".doc", ".docx", ".xls", ".xlsx", ".csv"]

# Audit Settings
AUDIT_LOG_RETENTION_DAYS=90

#==============================================================================
# DOCKER COMPOSE OVERRIDES
#==============================================================================

# Compose project name
COMPOSE_PROJECT_NAME=iam-dashboard

# Docker image tags
API_IMAGE_TAG=latest
WEB_IMAGE_TAG=latest

#==============================================================================
# DEVELOPMENT SETTINGS
#==============================================================================

# Testing Database (for development/testing)
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/iam_dashboard_test

# Development Tools Access
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Redis Commander
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

#==============================================================================
# MONITORING & LOGGING
#==============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Structured Logging (true/false)
STRUCTURED_LOGGING=true

#==============================================================================
# EMAIL CONFIGURATION (Optional)
#==============================================================================

# SMTP Settings (for notifications)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=noreply@yourdomain.com

#==============================================================================
# BACKUP CONFIGURATION (Optional)
#==============================================================================

# Backup Settings
BACKUP_VOLUMES=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

#==============================================================================
# PRODUCTION DEPLOYMENT (Production Only)
#==============================================================================

# Production Database (override in production)
# PRODUCTION_DATABASE_URL=postgresql://user:pass@prod-db:5432/iam_dashboard

# Production Redis (override in production)  
# PRODUCTION_REDIS_URL=redis://user:pass@prod-redis:6379/0

# SSL Certificate Paths (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Production Security
# SECURE_COOKIES=true
# CSRF_PROTECTION=true

#==============================================================================
# FEATURE FLAGS (Optional)
#==============================================================================

# Feature toggles
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_AUDIT_LOGGING=true

#==============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
#==============================================================================

# External API Keys
# EXTERNAL_API_KEY=your-api-key
# EXTERNAL_API_URL=https://api.external-service.com

# Analytics
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

#==============================================================================
# DEVELOPMENT OVERRIDES
#==============================================================================

# Override any settings for local development
# These will override the defaults above

# Example: Use different database for local development
# DATABASE_URL=postgresql://dev:dev@localhost:5432/iam_dashboard_dev

# Example: Disable certain features in development
# ENABLE_EMAIL_NOTIFICATIONS=false